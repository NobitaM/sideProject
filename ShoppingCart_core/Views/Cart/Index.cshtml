@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>起始頁Index</title>
</head>
<body>
    <h3>購物車頁面</h3>
    <table cellpadding="2" cellspacing="2" border="1">
        <tr>
            <th>Option</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
        @foreach (var item in ViewBag.cart)
        {
            <tr>
                <td><a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">移除</a></td>
                <td>@item.Product.Id</td>
                <td>@item.Product.Name</td>
                <td></td>
                <td>@item.Product.Price</td>
                <td>@item.Quantity</td>
                <td>@(item.Product.Price * item.Quantity)</td>
            </tr>
        }
        <tr>
            <td align="right" colspan="6">總計</td>
            <td>
                @ViewBag.total
            </td>
        </tr>

    </table>
    <br>
    <a asp-controller="product" asp-action="index">繼續購物</a>
</body>

</html>
